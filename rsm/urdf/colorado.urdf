<?xml version="1.0"?>

<robot name="colorado">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="6 3.25 0.1"/>
      </geometry>
    </visual>
  </link>

  <link name="velodyne_link">
    <visual>
      <geometry>
        <box size="0.2 0.2 0.26"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.13"/>
    </visual>
  </link>

  <link name="nav_link">
    <visual>
      <geometry>
        <box size="0.105 0.6 0.06"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.25 -0.03"/>
    </visual>
  </link>

  <joint name="base_to_velodyne" type="fixed">
    <parent link="base_link"/>
    <child link="velodyne_link"/>
    <origin xyz="2.5 0 2.0"/>
  </joint>

  <joint name="base_to_nav" type="fixed">
    <parent link="base_link"/>
    <child link="nav_link"/>
    <origin xyz="2.0 0 2.0"/>
  </joint>

</robot>
